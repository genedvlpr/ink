<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp">

    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image_1"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_centerVertical="true"
        android:background="@drawable/circular_bg_1"
        android:tint="@color/colorPrimary"
        android:visibility="visible"
        app:civ_border_color="@color/fab_bg"
        app:civ_border_width="5dp" />

    <RelativeLayout
        android:layout_toEndOf="@+id/profile_image_1"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp">

        <TextView
            android:id="@+id/full_name_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loading name"
            android:textSize="14sp"
            android:textStyle="bold"
            android:visibility="visible" />

        <TextView
            android:id="@+id/username_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/full_name_profile"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:text="Loading email"
            android:textSize="10sp"
            android:visibility="visible" />
    </RelativeLayout>


</RelativeLayout>